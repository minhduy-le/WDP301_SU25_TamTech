{
  "expo": {
    "name": "WDP301_Mobile_PosApp",
    "slug": "WDP301_Mobile_PosApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "scheme": "wdp301mobileposapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/assets/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "fonts": [
      {
        "asset": "./src/assets/fonts/Montserrat-Regular.ttf",
        "family": "Montserrat-Regular"
      },
      {
        "asset": "./src/assets/fonts/Montserrat-Medium.ttf",
        "family": "Montserrat-Medium"
      },
      {
        "asset": "./src/assets/fonts/Montserrat-SemiBold.ttf",
        "family": "Montserrat-SemiBold"
      },
      {
        "asset": "./src/assets/fonts/Montserrat-Bold.ttf",
        "family": "Montserrat-Bold"
      }
    ]
  }
}
